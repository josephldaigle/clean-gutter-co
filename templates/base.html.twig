{# twig template #}

<!doctype html>
<html class="no-js" lang="US-en">

<head>
    <meta charset="utf-8">

    <title>
        {% block page_title %}{{ 'Clean Gutter Co' }}{% endblock %}
    </title>

    <meta name="description" content="{% block page_meta_discription %}{{ 'Local, veteran-owned gutter cleaning service. No ladders & No mess. Licensed & Insured. Byron, Warner Robins & Fort Valley, Macon & Perry.' }}{% endblock %}">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />

    {# TODO: Implement web manifest #}
    <!-- Place favicon.ico in the root directory -->
    {#<link rel="manifest" href="site.webmanifest">#}
    {#<link rel="apple-touch-icon" href="icon.png">#}
    <link rel="icon" href="{{ absolute_url('favicon-home.ico') }}">
    <script src="https://www.youtube.com/iframe_api"></script>

    {#<meta name="theme-color" content="#fafafa">#}

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}


    <!-- Global site tag (gtag.js) - Google Analytics -->
    {% if (app.environment == 'prod') %}
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-134700346-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-134700346-1');
        </script>
    {% endif %}


</head>

<body>

<!--[if IE]>
<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
<![endif]-->

{# BODY BLOCK #}
<div id="app">

    {% set template_data = app.request.get('template_data') %}

    <div class="container-fluid col-md-10">
        <div class="row py-4">

            {# Site Header #}
            {% include 'components/header.html.twig' %}

            {# Site Wide Navigation Bar #}
            {% include 'components/nav-bar.html.twig' %}

            {# Override to impelement page body #}
            {% block page_content %}{% endblock %}

            <div class="w-100 mb-3"></div>
            {% include 'components/footer.html.twig' %}

        </div>
    </div>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>

</html>