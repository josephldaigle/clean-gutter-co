{# twig template #}
<div class="col-12">
    <div class="card" style="">

        {#Carousel#}
        <div id="cg-carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">

                 {#Allow implementor to control output of indicators (default is three)#}
                 {#See Bootstrap Carousel component for implementation instructions.#}
                {% block layout_main_car_controls %}{% endblock %}

            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">

                    {% block layout_main_car_img1 %}{% endblock %}

                </div>
                <div class="carousel-item">

                    {% block layout_main_car_img2 %}{% endblock %}

                </div>
                <div class="carousel-item">

                    {% block layout_main_car_img3 %}{% endblock %}

                </div>
            </div>
            <a class="carousel-control-prev" href="#cg-carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#cg-carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="card-body">

             {#Main Body Card#}
            {% block layout_main_body_card %}{% endblock %}

        </div>
    </div>
</div>